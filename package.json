{
  "name": "@abel_wong/react-tweet",
  "version": "1.0.0",
  "repository": "https://github.com/abel-wong/react-tweet.git",
  "license": "MIT",
  "private": true,
  "author": "Abel-Wong",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && pnpm publish -r",
    "publish-package": "chmod +x scripts/publish.sh && ./scripts/publish.sh"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "prettier": "^2.8.4",
    "turbo": "^1.8.3"
  },
  "packageManager": "pnpm@9.5.0"
}
